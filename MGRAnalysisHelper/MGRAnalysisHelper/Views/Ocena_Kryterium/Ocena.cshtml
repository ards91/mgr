@model IEnumerable<MGRAnalysisHelper.Models.Ocena_Kryterium>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Przeprowadź porównanie</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-comments fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.System1.Nazwa</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                KONFIGURACJA WAG
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kryterium</th>
                                <th>Ocena</th>
                                <th>Opis</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model.Where(e => e.PortalId == ViewBag.System1.ID && e.porownania.Id == 1))
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.kryterium.Nazwa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Wartosc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Opis)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edytuj", "WystawOcene", new { id = item.Id }) |
                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                    <hr class="divider">
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-comments fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.System2.Nazwa</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                KONFIGURACJA OCEN
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kryterium</th>
                                <th>Ocena</th>
                                <th>Opis</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int j = 0;}
                            @foreach (var item in Model.Where(e => e.PortalId == ViewBag.System2.ID && e.porownania.Id == 1))
                            {
                                <tr>
                                    <td>
                                        @j
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.kryterium.Nazwa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Wartosc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Opis)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edytuj", "WystawOcene", new { id = item.Id }) |
                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
                                    </td>
                                </tr>
                                j++;
                            }
                        </tbody>
                    </table>
                    <hr class="divider">
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <row>
            <hr class="divider">
            <button type="submit" class="btn btn-default">Submit Button</button>
            <a href="index.html">Przejdź do raportu końcowego</a>
            <hr class="divider">
        </row>
    </div>
</div>
