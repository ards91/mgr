@model IEnumerable<MGRAnalysisHelper.Models.Waga>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Przeprowadź porównanie</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-primary">
            <div class="panel-heading">
                KONFIGURACJA WAG
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th style="width: 40%;">Kryterium</th>
                                <th style="width: 40%;">Waga</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Kryterium.Nazwa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Wartosc)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edycja", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr class="divider">
                    <a class="btn btn-default" href="@Url.Action("Ocena", "Ocena_Kryterium", new {id = 1, id1 =2 })">Przejdź do ocen</a>
                    <!--<button type="submit" class="btn btn-default">Przejdź do ocen</button>-->
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>